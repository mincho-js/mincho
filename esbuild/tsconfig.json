{
  "compilerOptions": {
    "target": "ESNext",
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "declaration": true,
    "outDir": "build",
    "strict": true,
    "skipLibCheck": true,
    "emitDeclarationOnly": true,
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}
