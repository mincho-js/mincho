{
  "$schema": "https://turborepo.org/schema.json",
  "tasks": {
    "clean": {
      "cache": false
    },
    "build": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "src/**/*.ts",
        "vite.config.ts"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    "lint": {
      "inputs": [
        "$TURBO_HASH_GLOBAL_DEPS"
      ],
      "outputs": [
        ".cache/eslint"
      ]
    },
    "fix": {},
    "check": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        ".cache/typescript/*"
      ]
    },
    "check:all": {
      "dependsOn": [
        "lint",
        "check"
      ]
    },
    "test": {
      "dependsOn": [
        "build"
      ],
      "inputs": [
        "src/**/*.ts",
        "__test__/**/*.ts",
        "vite.config.ts"
      ]
    },
    "test:all": {
      "dependsOn": [
        "build",
        "test",
        "check:all"
      ]
    },
    "coverage": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "src/**/*.ts",
        "__test__/**/*.ts",
        "vite.config.ts"
      ],
      "outputs": [
        "coverage/**"
      ]
    },
    "coverage:all": {
      "dependsOn": [
        "build",
        "coverage",
        "check:all"
      ]
    }
  },
  "globalDependencies": [
    "packages.json"
  ]
}
