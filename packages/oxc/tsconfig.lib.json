{
  "extends": "tsconfig-custom/tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "tsBuildInfoFile": ".cache/typescript/tsbuildinfo",
    "types": ["node"],
    "outDir": "./dist/esm",
    "declarationDir": "./dist/esm"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/__tests__/**/*",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "dist",
    "node_modules"
  ]
}
