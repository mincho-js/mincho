{
  "extends": "tsconfig-custom/tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "baseUrl": "./",
    "tsBuildInfoFile": "./.cache/typescript/tsbuildinfo-esm",
    "outDir": "./dist/esm",
    "declarationDir": "./dist/esm"
  },
  "include": ["global.d.ts", "src/**/*.ts",  "__tests__/**/*.ts"],
  "exclude": ["dist", "_release"],
  "references": [{ "path": "tsconfig.node.json" }]
}
