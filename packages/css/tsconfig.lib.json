{
  "extends": "tsconfig-custom/tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "./src",
    "baseUrl": "./",
    "paths": {                                           /* Specify a set of entries that re-map imports to additional lookup locations. */
      "@/*": ["src/*"]
    },
    "tsBuildInfoFile": "./.cache/typescript/tsbuildinfo-esm",
    "outDir": "./dist/esm",
    "declarationDir": "./dist/esm"
  },
  "include": [
    "src/**/*.ts",
    "__tests__/**/*.ts"
  ],
  "exclude": [
    "dist",
    "_release"
  ]
}
